{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Shell Configuration Schema",
    "description": "Schema for the custom shell configuration file",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Path to the JSON schema file"
        },
        "clock": {
            "type": "object",
            "description": "Configuration for the clock module",
            "properties": {
                "format": {
                    "type": "string",
                    "default": "%x %H:%M",
                    "description": "Date and time format string (see https://strftime.org/)"
                }
            },
            "additionalProperties": false
        },
        "theme": {
            "type": "object",
            "description": "Visual theme settings",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The active color scheme",
                    "enum": [
                        "catppuccin-mocha",
                        "adwaita",
                        "everforest",
                        "gruvbox",
                        "tokyo-night"
                    ],
                    "default": "catppuccin-mocha"
                },
                "accent": {
                    "type": "string",
                    "description": "Custom hex accent color (e.g. #ff0000). Leave empty to use theme default.",
                    "pattern": "^$|^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
                }
            },
            "required": [
                "name"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "theme"
    ],
    "additionalProperties": false
}